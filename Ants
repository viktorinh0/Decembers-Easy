#include <iostream>
#include <array>
#include <algorithm>

using namespace std;

long long int xAxis[100];
int n, x, y, d, ants, delta, blocks;
int ys;
int main()
{
	scanf_s("%i",&n);
	for (int i = 0; i < n; i++)
	{
		scanf_s("%i", &x);
		scanf_s("%i", &y);
		scanf_s("%i", &d);
		delta = x + d;
		for (int a = 0; a < delta; a++)
		{
			xAxis[x+a] = 1;
		}
		delta, x, y, d = 0;
		
	}
	blocks = count(xAxis, xAxis + 100, 1);
	for (int asd = 0; asd < 100; asd++)
	{
		cout << xAxis[asd] << endl;
	}
	cout << blocks << "   asd" << endl;
	

	system("PAUSE");


	return 0;
}
